//https://practice.geeksforgeeks.org/problems/sum-of-ap-series/0
#include <iostream>
#include<iomanip>
using namespace std;

int main() {
	//code
	int t;
	cin>>t;
	while(t--){
	   double a,d,n,sn;
	    cin>>a>>d>>n;
	    sn=(n*((2*a)+(n-1)*d))/2;
	    cout<<fixed<<setprecision(2)<<sn<<endl;
	}
	return 0;
}
