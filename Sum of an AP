//https://practice.geeksforgeeks.org/problems/sum-of-an-ap/0
#include <iostream>
using namespace std;

int main() {
	//code
	int t;
	cin>>t;
	while(t--){
	    int n,a,d,sum,n1,n2;
	    cin>>n;
	    cin>>a>>d;
	    //        n1   n2   =(n*(n1+n2))/2
	    //sum=(n*[2a+(n-1)d])/2
	    
	    n1=2*a;
	    n2=(n-1)*d;
	    sum=(n*(n1+n2))/2;
	    cout<<sum<<endl;
	}
	return 0;
}
